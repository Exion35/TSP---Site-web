{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <h1 style="text-align:center; padding: 20px;">Region</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ region.presentation }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ region.country }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-warning" onclick="window.location.href='{{ path('region_edit', {'id': region.id}) }}'">Modifier</button>
    <br><br>
    {{ include('region/_delete_form.html.twig') }}
    <br>
    <button type="button" class="btn btn-dark" onclick="window.location.href='javascript:history.go(-1)'">Retour</button>
    <div class="vspace">
    </div>
{% endblock %}
