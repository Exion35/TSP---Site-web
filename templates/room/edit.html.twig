{% extends 'base.html.twig' %}

{% block title %}Modification Room{% endblock %}

{% block body %}
    
    <h1 style="text-align:center; padding: 20px;">Modification Room</h1>
    
    {% if (app.user.owner == room.owner) or (is_granted('ROLE_ADMIN')) %}
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
    </svg>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
              <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>{{ message }}
        </div>
    {% endfor %}
    {{ include('room/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
    <br>
    {{ include('room/_delete_form.html.twig') }}
    
    {% endif %}
    <br>
    <button type="button" class="btn btn-dark" onclick="window.location.href='javascript:history.go(-1)'">Retour</button>
    <div class="vspace">
    </div>
{% endblock %}
