{% extends 'base.html.twig' %}

{% block title %}Connexion à C&C{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <br>
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 style="text-align:center; padding: 20px;">Se connecter à Couettes & Cafés</h1>
    <div class="m-4">
        <main class="form-signin">
        <div class="form-floating">
            <input type="email" value="{{ last_username }}" name="email" id="floatingInput" class="form-control" autocomplete="email" required autofocus>
            <label for="floatingInput">Adresse email</label>
        </div>
        <br>
        <div class="form-floating">
            <input type="password" name="password" id="floatingPassword" class="form-control" autocomplete="current-password" required>
            <label for="floatingPassword">Mot de passe</label>
        </div>  

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
   

        <button class="w-100 btn btn-lg btn-dark" type="submit">
            Se connecter
        </button>
        <br><br>
        <p>Vous n'avez pas de compte ?<br>
         <a href="{{ path('app_register')}}"> Inscrivez-vous</a> !
        </main>
    </div>

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        
</form>
{% endblock %}

